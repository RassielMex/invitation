---
import Image from "astro/components/Image.astro";
import FadeImage from "@components/FadeImage.astro";
import cornerFlower from "@assets/images/hojas.png";
import imgSection from "@assets/images/SaveTheDate_383_h.jpg";
import whatsImg from "@assets/images/whatsapp.png";
import rings from "@assets/images/engagement-ring.png";
import brideImg from "@assets/images/bride.png";
---

<section
  class="bg-main max-w-5xl mx-auto flex flex-col justify-between relative"
>
  <Image
    alt="corner"
    src={cornerFlower}
    class="rotate-[180deg] top-0 left-0 absolute w-20 h-20"
  />

  <div class="w-full flex flex-col gap-2 items-center justify-center mt-4">
    <p class="text-amber-50  text-xl w-full text-center my-auto">
      Confirmación:
    </p>
    <Image alt="date" src={whatsImg} class="h-10 w-10" />
    <p class="text-amber-50  text-sm w-96 text-center">
      Te pedimos confirmar tu asistencia
    </p>
  </div>

  <FadeImage alt="img-section" src={imgSection} />

  <div class="flex w-full justify-center items-center my-6 gap-8">
    <div class="flex gap-1 justify-start items-center">
      <Image alt="date" src={brideImg} class="h-4 w-4 sm:h-6 sm:w:6" />
      <a
        class="underline text-tertiary font-seasons font-bold"
        href="https://maps.app.goo.gl/mvmFgABCn5Jk33BM9"
        target="_blank"
        rel="noopener noreferrer">Confirma aquí</a
      >
    </div>
    <div class="flex gap-1 justify-start items-center">
      <Image alt="date" src={brideImg} class="h-4 w-4 sm:h-6 sm:w:6" />
      <a
        class="underline text-tertiary font-seasons font-bold"
        href="https://maps.app.goo.gl/mvmFgABCn5Jk33BM9"
        target="_blank"
        rel="noopener noreferrer">Confirma aquí</a
      >
    </div>
  </div>

  <p class="w-full text-center mb-8 text-amber-50  text-4xl">¡Te esperamos!</p>

  <div class="flex w-full justify-between items-center pb-8">
    <Image alt="corner" src={cornerFlower} class="rotate-[180deg] w-20 h-20" />
    <div class="flex flex-col items-center">
      <Image alt="rings" src={rings} class="w-16 h-16" />
      <p class="font-cookie text-4xl text-amber-50">Julisa y Rassiel</p>
    </div>
    <Image alt="corner" src={cornerFlower} class="w-20 h-20" />
  </div>
</section>
